                </scan>
                <range>
                    <min>0.02</min>
                    <max>4.0</max>
                    <resolution>0.01</resolution>
                </range>
            </ray>
            <plugin filename="libgazebo_ros_range.so" name="gazebo_ros_ultrasonic_u2">
                <gaussianNoise>0.01</gaussianNoise>
                <alwaysOn>true</alwaysOn>
                <updateRate>10</updateRate>
                <topicName>sensor/ultrasonic_u2</topicName>
                <frameName>u2_link</frameName>
                <radiation>ultrasonic</radiation>
            </plugin>
        </sensor>
    </gazebo>

    <!-- Ultrasonic Sensor u3 -->
    <gazebo reference="u3_link">
        <sensor type="ray" name="ultrasonic_sensor_u3">
            <pose>-2.16 -0.260 0.05 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>1</samples>
                        <resolution>1</resolution>
                        <min_angle>0</min_angle>
                        <max_angle>0</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.02</min>
                    <max>4.0</max>
                    <resolution>0.01</resolution>
                </range>
            </ray>
            <plugin filename="libgazebo_ros_range.so" name="gazebo_ros_ultrasonic_u3">
                <gaussianNoise>0.01</gaussianNoise>
                <alwaysOn>true</alwaysOn>
                <updateRate>10</updateRate>
                <topicName>sensor/ultrasonic_u3</topicName>
                <frameName>u3_link</frameName>
